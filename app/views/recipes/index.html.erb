  
<h1>Recipes for <%= @search_term %></h1>

<% if @recipes.nil? %>
  <p>Sorry, but your search did not return any relavent results...</p>
<% else %>

  <table border="1">
    <tr>
      <th>Photo</th>
      <th>Title</th>
      <th>Ingredients</th>
    </tr>
    <% @recipes.each do |recipe| %>
      <tr class=<%= cycle('even', 'odd') %>>
        <td><%= link_to(image_tag(recipe["thumbnail"], height: '100', width: '100'), recipe["href"])%></td>
        <td><%= link_to(sanitize(recipe["title"]), recipe["href"]) %></td>
        <td><%= recipe["ingredients"] %></td>
      </tr>
    <% end %>
  </table>

<% end %>